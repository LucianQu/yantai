<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#429EFA"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/ll_gerenxinxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/recycler_bg"
        android:padding="13dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/shezhi_gerenxinxi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="个人信息" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/yujingxiangying_shangjiantou"
            android:rotation="90"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_banbenguanli"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/recycler_bg"
        android:padding="13dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/shezhi_banbengengxin" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="版本管理" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/yujingxiangying_shangjiantou"
            android:rotation="90"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xiugaimima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/recycler_bg"
        android:padding="13dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/shezhi_xiugaimima" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="修改密码" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/yujingxiangying_shangjiantou"
            android:rotation="90"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rizhichaxun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/recycler_bg"
        android:padding="13dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/shezhi_rizhichaxun" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="网络选择" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/yujingxiangying_shangjiantou"
            android:rotation="90"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/recycler_bg"
        android:padding="13dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="技术支持：北京奥特美克科技股份有限公司"
            android:textColor="#B1B1B1"/>

    </RelativeLayout>

</LinearLayout>