<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray2"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="烟台市防汛信息查询系统"
        android:background="@color/black2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="6dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="开始时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sday"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            tools:text="2018-07-17"
            android:background="@drawable/shape_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="2dp"
            android:background="@color/black2"
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_stime"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            tools:text="08-00-00"
            android:background="@drawable/shape_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="结束时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_eday"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            tools:text="2018-07-17"
            android:background="@drawable/shape_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="2dp"
            android:background="@color/black2"
            android:layout_width="5dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_etime"

            android:layout_marginLeft="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            tools:text="08-00-00"
            android:background="@drawable/shape_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="6dp"
        android:background="@color/white2"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
<LinearLayout
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_cancel"
    android:textSize="16sp"
    android:layout_weight="0"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/shape_time2"
    android:text="取消"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:text="时间选择"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_query"
    android:textSize="16sp"
    android:layout_weight="0"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/shape_time2"
    android:text="查询"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>
